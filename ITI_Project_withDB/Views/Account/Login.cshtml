@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<main class="form-signin w-100 m-auto">
    <form asp-controller="Account" asp-action="Login" method="post">
        <img class="mb-4" src="/assets/img/portfolio/cabin.png" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Please Login in</h1>
        <div class="form-check text-start my-3">
            <input class="form-check-input" asp-for="IsInstructor">
            <label class="form-check-label" asp-for="IsInstructor">
                Is An Instructor
            </label>
        </div>
        <div class="form-floating">
            <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
            <label asp-for="Email" class="form-label">Email address</label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-check text-start my-3">
            <input class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">
                Remember me
            </label>
            
        </div>
        
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    </form>
</main>

